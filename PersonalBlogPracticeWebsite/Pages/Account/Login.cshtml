@page
@model PersonalBlogPracticeWebsite.Pages.Account.Login

@{
}

<form method="post">
    <div class="form-group">
        <label asp-for="LogModel.Email"></label>
        <input asp-for="LogModel.Email"/>
        <span asp-validation-for="LogModel.Email"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="LogModel.Password"></label>
        <input asp-for="LogModel.Password"/>
        <span asp-validation-for="LogModel.Password"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="LogModel.KeepSingedIn"></label>
        <input asp-for="LogModel.KeepSingedIn"/>
        <button type="submit">Login</button>
    </div>
</form>
