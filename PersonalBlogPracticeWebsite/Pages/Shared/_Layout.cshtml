<!DOCTYPE html>

<html lang="en">
<head>
    <title>@ViewData["Title"] - Alex Dev</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css"/>

    <style>
        body {
            padding-top: 60px; /* 60px to make the container go all the way to the bottom of the top bar */
        }
        @await RenderSectionAsync("InlineCSS", false)
    </style>
    @await RenderSectionAsync("AdditionalCss", false)
</head>
<body>
<header>
    <nav class="navbar fixed-top navbar-expand-sm navbar-dark bg-dark">
        <a class="navbar-brand" asp-page="/Index">MyPersonalBlog</a>
        <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarMenu" style="margin-left: 15px;">
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="/Articles/AllArticles">Articles</a>
                </li>
            </ul>
        </div>
        
        <div class="justify-content-end" style="margin-left: 15px;">
            <partial name="Partials/_LoginPartial"/>
        </div>
    </nav>
</header>
<main>
    @RenderBody()
</main>

<script src="js/bootstrap.min.js"></script>
</body>
</html>
