@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

@{
}

<ul class="nav navbar-nav">
    @if (SignInManager.IsSignedIn(User)) {
        <li class="nav-item">
            <b class="text-light">Hello @User.Identity?.Name!</b>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new {area = ""})" method="post">
                <button type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
    } else  {
        <li class="nav-item">
            <a class="nav-link" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
